<Controller>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            Image:
                id: first_image

            Image:
                id: second_image

            Image:
                id: third_image

        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Select the file to be processed:'

                FileChooserListView:
                    id: file_chooser

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Detectors number:'

                TextInput:
                    id: detectors_number_input
                    multiline: False

                Label:
                    text: 'Steps number:'

                TextInput:
                    id: steps_input
                    multiline: False

                Label:
                    text: 'Detectors range:'

                TextInput:
                    id: detectors_range_input
                    multiline: False

        BoxLayout:
            orientation: 'horizontal'

            Button:
                id: first_button
                text: "Load the image"
                on_press: root.first_button_clicked()

            Button:
                id: second_button
                text: "Process the image"
                on_press: root.second_button_clicked()

            Button:
                id: third_button
                text: "Recover the image"
                on_press: root.third_button_clicked()