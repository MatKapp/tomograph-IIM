<Controller>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Select the file to be processed:'

                FileChooserListView:
                    id: file_chooser



            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Detectors number:'

                TextInput:
                    id: detectors_number_input
                    multiline: False
                    text: "100"

                Label:
                    text: 'Steps number:'

                TextInput:
                    id: steps_input
                    multiline: False
                    text: "50"

                Label:
                    text: 'Detectors range:'

                TextInput:
                    id: detectors_range_input
                    multiline: False
                    text: "90"


        BoxLayout:
            orientation: 'horizontal'

            Image:
                id: first_image
                allow_stretch: True
                keep_ratio: False

            Image:
                id: second_image
                allow_stretch: True
                keep_ratio: False

            Image:
                id: third_image
                allow_stretch: True
                keep_ratio: False


        BoxLayout:
            orientation: 'horizontal'

            Button:
                id: first_button
                text: "Load the image"
                on_press: root.first_button_clicked()


            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: "Slider to choose the processing step."

                Slider:
                    id: slider
                    min: 1
                    step: 1
                    on_touch_up: root.slider_touched_up()

                Button:
                    id: second_button
                    text: "Process the image"
                    on_press: root.second_button_clicked()

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: "Mean Squared Error value:"

                Label:
                    text: "Mean Squared Error Value"
                    id: mean_squared_error_value

                Button:
                    id: third_button
                    text: "Recover the image"
                    on_press: root.third_button_clicked()

